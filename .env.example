# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/video_api
DATABASE_URL_DEV=sqlite+aiosqlite:///./dev.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_KEYS=your-secret-api-key-here,another-key-for-testing
DEBUG=true
LOG_LEVEL=INFO

# File Upload Configuration
UPLOAD_MAX_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# Job Configuration
JOB_TIMEOUT=3600  # 1 hour in seconds
MAX_CONCURRENT_JOBS=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Webhook Configuration (optional)
WEBHOOK_SECRET=webhook-secret-key
WEBHOOK_TIMEOUT=30

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# Video Processing
DEFAULT_VIDEO_QUALITY=medium
DEFAULT_VIDEO_FORMAT=mp4
DEFAULT_RESOLUTION=1920x1080
DEFAULT_FPS=30

# FFmpeg (if system installation)
FFMPEG_BINARY=ffmpeg
